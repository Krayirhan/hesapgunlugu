<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production: Block cleartext (HTTP) traffic -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system certificates (Android CA store) -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Debug-only overrides live in app/src/debug/res/xml/network_security_config.xml -->
</network-security-config>
